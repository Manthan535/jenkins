pipeline {
    agent any

    stages {

        stage('Clone from GitHub') {
            steps {
                git branch: 'main', url: 'https://github.com/{Enter_git}'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t myapp:latest .'
            }
        }

        stage('Run Docker Container') {
            steps {
                sh 'docker run -d --name myapp_container -p 8081:80 myapp:latest'
            }
        }

        stage('Linux Commands') {
            steps {
                sh '''
                    echo "Listing files..."
                    ls -l
                    echo "Checking Docker containers..."
                    docker ps
                '''
            }
        }

        stage('Deploy Complete') {
            steps {
                echo "Deployment Successful!"
            }
        }
    }
}

